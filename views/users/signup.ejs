<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="new-head mb-4">SignUp on Wanderlust</h3>
  </div>
  <div class="col-8 offset-2">
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Create a unique username !</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Create a strong password !</div>
      </div>
      <button type="submit" class="btn btn-primary mt-3 mb-3 outline-dark">
        SignUp
      </button>
    </form>
  </div>
</div>
